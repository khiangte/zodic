<div id = 'def_div' class = "form-box">
  <div id = "notice"><%= notice %></div>
  <div id = "alert"><%= flash[:error].try(:html_safe) %></div>
  <h2>Edit <%= resource_name.to_s.humanize %> Account</h2>

  <%= form_for(resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.error_messages %>

    
    <%= f.text_field :email, :readonly => true %></p>

    <p><%= f.password_field :password, :placeholder => "new password" %></p>

    <p><%= f.password_field :password_confirmation, :placeholder => "confirm new password"  %></p>

    <p><%= f.password_field :current_password, :placeholder => "current password"  %></p>

    <p><%= f.submit "Change Password" %></p>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

  <%= link_to "Back", :back %>
</div>
