  <%= label_tag(:user_name, "Alias:") %><br/>
  <%= text_field :user, :user_name, :size => 32 %><br/>
  <%= label_tag(:full_name, "Name:") %><br/>
  <%= text_field :user, :full_name, :size => 32 %><br/>
  <%= "Your email: " + @user[:email] %><br/>
  <%= text_field :user, :email, :size => 32 , :hidden => true %><br/>
 <!--  <%= label_tag(:password, "Password:") %><br/>
  <%= password_field :user, :password, :size => 32 %><br/> -->
  
  <%= submit_tag("Save") %>
<% end %>
